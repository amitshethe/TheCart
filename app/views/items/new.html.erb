<h1>New Item</h1>
<%= form_with model: @item do |form| %>
    <div>
        <%=form.label :Item_name%><br>        
        <%=form.text_field :Item_name%><br> 
    </div>
    <div>    
        <%=form.label :Item_price%><br>
        <%=form.text_area :Item_price%><br>                    
    </div>
    <div>
        <%=form.submit%><br>
    </div>

<%end%>
